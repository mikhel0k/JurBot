# PostgreSQL (основная БД)
POSTGRES_DB=jurbot
POSTGRES_USER=jurbot
POSTGRES_PASSWORD=your_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# PostgreSQL (тестовая БД)
POSTGRES_DB_TEST=jurbot_test
POSTGRES_USER_TEST=jurbot
POSTGRES_PASSWORD_TEST=your_password
POSTGRES_HOST_TEST=localhost
POSTGRES_PORT_TEST=5433

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Логирование (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# development — secure=False для cookies (работа по HTTP на localhost)
ENVIRONMENT=development

# CORS: разрешённые origins через запятую (например фронт на другом порту)
# CORS_ORIGINS=http://localhost:3000,https://app.example.com

# Gmail для отправки кодов подтверждения (в dev можно не задавать — письма не отправляются)
LOGIN_FOR_GMAIL=your@gmail.com
PASSWORD_FOR_GMAIL=app_password
SEND_LOGIN_CODE_EMAIL=true
